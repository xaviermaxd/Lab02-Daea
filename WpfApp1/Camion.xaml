<Window x:Class="WpfApp1.Camion"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Camion" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label Width="270">Peso Máximo</Label>
            <TextBox Name="PesoMaximo" Width="200"/>

            <Label Width="273">Placa</Label>
            <TextBox Name="Placa" Width="200"/>

            <Label Width="271">Peso Vacío</Label>
            <TextBox Name="PesoVacio" Width="200"/>

            <Button Content="Guardar" Width="100" Margin="5" Click="Guardar_Click" />
            <Button Content="Exit" Width="100" Margin="5" Click="Exit_Click" />
        </StackPanel>
    </Grid>
</Window>
